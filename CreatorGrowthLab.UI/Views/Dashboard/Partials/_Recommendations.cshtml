@model CreatorGrowthLab.UI.Models.Analytics.AnalyticsResponse
@using System.Globalization

@{
    string F2(double x) => x.ToString("0.##", CultureInfo.InvariantCulture);
}

<div class="rounded-2xl border-2 border-slate-200 bg-white shadow-xl overflow-hidden">
    <div class="bg-gradient-to-r from-emerald-600 to-emerald-500 px-8 py-6">
        <div class="flex items-center gap-3">
            <div class="p-2 rounded-xl bg-white/20 backdrop-blur-sm">
                <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                          d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"></path>
                </svg>
            </div>
            <div>
                <h2 class="text-2xl font-black text-white">Action Items</h2>
                <p class="text-sm text-emerald-100 font-medium mt-0.5">
                    Data-driven recommendations
                </p>
            </div>
        </div>
    </div>

    <div class="p-8 space-y-4">
        @foreach (var r in Model.Recommendations)
        {
            var pos = r.ExpectedImpactPercent >= 0;
            <div class="group relative overflow-hidden rounded-2xl border-2 border-slate-200 bg-gradient-to-br from-white to-slate-50 p-6 hover:border-indigo-300 hover:shadow-lg transition-all duration-300">
                <div class="flex items-start justify-between gap-4 mb-4">
                    <h3 class="text-lg font-black text-slate-900 flex-1">
                        @r.Title
                    </h3>
                    <span class="shrink-0 px-3 py-1.5 rounded-full text-xs font-black uppercase tracking-wider border-2
                        @(r.Confidence.ToLowerInvariant() == "high" ? "bg-emerald-50 text-emerald-700 border-emerald-300" :
                          r.Confidence.ToLowerInvariant() == "medium" ? "bg-amber-50 text-amber-700 border-amber-300" :
                          "bg-slate-100 text-slate-700 border-slate-300")">
                        @r.Confidence
                    </span>
                </div>

                <p class="text-sm text-slate-600 font-medium leading-relaxed">
                    @r.Detail
                </p>

                <div class="mt-4 pt-4 border-t-2 border-slate-100">
                    <div class="flex items-center gap-2">
                        <svg class="w-5 h-5 @(pos ? "text-emerald-600" : "text-rose-600")"
                             fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                  d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"></path>
                        </svg>
                        <span class="text-sm font-black @(pos ? "text-emerald-700" : "text-rose-700")">
                            Expected Impact: @(pos ? "+" : "")@F2(r.ExpectedImpactPercent)%
                        </span>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
