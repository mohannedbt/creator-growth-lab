@model CreatorGrowthLab.UI.Controllers.ResolveViewModel

@{
    ViewData["Title"] = "Resolve Channel ID";
}

<div class="space-y-8 animate-in fade-in duration-700">
    <div class="relative overflow-hidden rounded-3xl border-2 border-slate-200/60 bg-gradient-to-br from-slate-900 via-indigo-950 to-slate-900 shadow-2xl">
        <div class="absolute inset-0 bg-[url('https://grainy-gradients.vercel.app/noise.svg')] opacity-20 brightness-100 contrast-150"></div>
        <div class="absolute inset-0 bg-grid-white/[0.03] bg-[size:30px_30px]"></div>
        
        <div class="relative p-8 lg:p-12">
            <div class="flex flex-col gap-8">
                <div class="space-y-4">
                    <div class="inline-flex items-center gap-2 px-4 py-1.5 rounded-full bg-indigo-500/10 border border-indigo-400/20 backdrop-blur-md">
                        <svg class="w-4 h-4 text-indigo-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
                        </svg>
                        <span class="text-xs font-bold text-indigo-300 uppercase tracking-widest">Identity Resolver</span>
                    </div>
                    <h1 class="text-4xl lg:text-5xl font-black tracking-tight text-white leading-tight">
                        ID <span class="text-transparent bg-clip-text bg-gradient-to-r from-indigo-400 to-blue-400">Discovery</span>
                    </h1>
                    <p class="text-lg text-slate-400 max-w-2xl font-medium leading-relaxed">
                        Convert a YouTube handle or URL into a permanent Channel ID. This is required for advanced statistical analysis.
                    </p>
                </div>

                <form method="post" class="bg-white/5 backdrop-blur-xl rounded-2xl border border-white/10 p-1 shadow-inner">
                    @Html.AntiForgeryToken()
                    <div class="grid grid-cols-1 md:grid-cols-12 gap-1">
                        
                        <div class="md:col-span-10 p-4">
                            <label class="block text-xs font-black text-indigo-300 uppercase tracking-widest mb-2 px-1">Handle or URL</label>
                            <input asp-for="Input" 
                                   class="w-full rounded-xl border-0 bg-white/10 text-white placeholder-slate-500 focus:ring-2 focus:ring-indigo-500 transition-all px-4 py-3.5 font-bold" 
                                   placeholder="e.g. @@MrBeast or youtube.com/@@MrBeast" />
                            <div class="mt-2 px-1 flex items-center gap-2">
                                <span class="flex h-1.5 w-1.5 rounded-full bg-indigo-500"></span>
                                <code class="text-[10px] text-slate-500 font-bold uppercase tracking-tighter">FastAPI Endpoint: /channel_id</code>
                            </div>
                        </div>

                        <div class="md:col-span-2 p-2 flex items-stretch">
                            <button type="submit" class="w-full rounded-xl bg-indigo-500 hover:bg-indigo-400 text-white font-black transition-all shadow-lg hover:shadow-indigo-500/25 active:scale-95 flex items-center justify-center gap-2 group">
                                <span class="uppercase tracking-widest text-xs">Resolve</span>
                                <svg class="w-4 h-4 group-hover:rotate-12 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
                                </svg>
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="max-w-4xl mx-auto">
        @if (!string.IsNullOrWhiteSpace(Model.ErrorMessage))
        {
            <div class="rounded-2xl border-2 border-rose-300 bg-rose-50 p-6 shadow-xl animate-in slide-in-from-top-4">
                <div class="flex items-start gap-4">
                    <div class="p-2 rounded-lg bg-rose-100 text-rose-600">
                        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>
                    </div>
                    <div>
                        <h3 class="font-black text-rose-900 uppercase tracking-widest text-xs">Resolution Error</h3>
                        <p class="text-sm text-rose-800 mt-1 font-medium">@Model.ErrorMessage</p>
                    </div>
                </div>
            </div>
        }

        @if (!string.IsNullOrWhiteSpace(Model.ChannelId))
        {
            <div class="rounded-3xl border-2 border-emerald-100 bg-white p-8 shadow-2xl animate-in zoom-in-95 duration-500">
                <div class="flex flex-col items-center text-center gap-6">
                    <div class="h-16 w-16 rounded-2xl bg-emerald-50 text-emerald-600 flex items-center justify-center shadow-inner">
                        <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>
                    </div>
                    
                    <div>
                        <h3 class="text-xs font-black text-slate-400 uppercase tracking-[0.2em] mb-2">Discovery Successful</h3>
                        <div class="flex items-center gap-3 bg-slate-50 px-6 py-4 rounded-2xl border border-slate-100 shadow-sm">
                            <code class="text-xl font-black text-slate-900 tracking-tight">@Model.ChannelId</code>
                            <button onclick="navigator.clipboard.writeText('@Model.ChannelId')" class="text-slate-400 hover:text-indigo-500 transition-colors">
                                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z"></path></svg>
                            </button>
                        </div>
                    </div>

                    <div class="w-full h-px bg-slate-100"></div>

                    <a class="group w-full sm:w-auto inline-flex items-center justify-center gap-3 rounded-2xl bg-slate-900 text-white px-8 py-4 font-black transition-all hover:bg-indigo-600 hover:shadow-xl hover:shadow-indigo-500/20 active:scale-95"
                       asp-controller="Dashboard" asp-action="Index" asp-route-channelId="@Model.ChannelId">
                        <span>Launch Full Analysis</span>
                        <svg class="w-5 h-5 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M13 7l5 5m0 0l-5 5m5-5H6"></path></svg>
                    </a>
                </div>
            </div>
        }
    </div>
</div>